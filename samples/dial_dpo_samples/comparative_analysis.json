  "examples": [
    {
      "example_id": "casual_shirt_shopping",
      "user_input": "मुझे casual shirts चाहिए under 2000 office के लिए",
      "sft_baseline": {
        "tool_calls": [
          {
            "tool_name": "search",
            "arguments": {
              "query": "casual shirts",
              "max_price": 2000
            },
            "reasoning": "Simple search without considering office context",
            "quality_issues": [
              "Missed 'office' context - casual shirts may not be office appropriate",
              "No consideration of formal/semi-formal requirements",
              "Generic search without style refinement"
            ]
          }
        ],
        "response_quality": 2.8,
        "tool_appropriateness": 0.65,
        "argument_completeness": 0.72
      },
      "sft_dpo_improved": {
        "tool_calls": [
          {
            "tool_name": "search",
            "arguments": {
              "query": "semi-formal shirts office wear",
              "max_price": 2000,
              "style": "business casual",
              "occasion": "office"
            },
            "reasoning": "Understood office context and refined search to business casual"
          },
          {
            "tool_name": "filter",
            "arguments": {
              "style": ["formal", "semi-formal"],
              "color": ["white", "light blue", "grey"],
              "collar_type": "regular"
            },
            "reasoning": "Applied office-appropriate filters"
          }
        ],
        "response_quality": 4.2,
        "tool_appropriateness": 0.91,
        "argument_completeness": 0.89,
        "improvements": [
          "Correctly interpreted 'casual shirts for office' as business casual",
          "Added appropriate style and occasion filters",
          "Better understanding of professional dress code context"
        ]
      },
      "improvement_metrics": {
        "tool_selection": "+26% (more appropriate tools)",
        "argument_quality": "+17% (better context understanding)",
        "execution_order": "+15% (logical progression)",
        "user_utility": "+50% (higher satisfaction with relevant results)"
      }
    },
    
